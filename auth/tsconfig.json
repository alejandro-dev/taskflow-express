{
   "compilerOptions": {
      "target": "ES6",
      "lib": ["ES6", "DOM"],
      "module": "commonjs",
      "rootDir": "./src",
      "moduleResolution": "node",
      "baseUrl": "./dist",
      "paths": {
         "*": ["./node_modules/*", "./dist/*"]
      },
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": false,
      "strict": true,
      "skipLibCheck": true
   },
   "include": [
      "src/**/*",
      "protos/**/*.proto"
   ],
   "exclude": [
      "node_modules/*",
      "dist"
   ]
}
  